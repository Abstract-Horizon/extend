<beans>

  <depends-on>org.abstracthorizon.extend.support:extend-server-control-server:1.2</depends-on>

  <bean name="ServerControl" class="org.abstracthorizon.extend.server.support.Control">
    <service>
    <create-method />
    <start-method>start</start-method>
    <stop-method>stop</stop-method>
    <destroy-method />
    </service>
    <property name="server"><ref bean="Server" /></property>
  </bean>


</beans>
